@stackcreate{gt};
#alias gt gps.gt;

#var gps_path_index 0;
#var gps_path_size 0;

#alias {on_there} {
    #alias on_there_${dst_roomno} #cr;
    #alias on_there_${dst_roomno} %0;
};

#alias {gps.gt.check} {
    gt.stop;
    #var gps_stop 0;
    #var dst_roomno @stacktop{gt};
    #alias {gps_check_room_done} {
        #var src_roomno ${gps.roomno};
        #if {${src_roomno} == ${dst_roomno}} {
            gt.stop;
            #var tmp @stackpop{gt};
            #delay {1} {
                #showme {GPS: 抵达目的地};
                on_there_${dst_roomno};
                #alias on_there_${dst_roomno} #cr;
            };
        };
        #else {
            #if {${gps_stop} == 0} {
                #delay {1} {
                    random_walk {
                        gps.retry;
                    };
                };
            };
        };
    };
    gps.check_room {
        gps_check_room_done;
    };
};

#alias gt.stop gps.gt.stop;
#alias {gps.gt.stop} {
    #var gps.run.mode nil;
    gps.stop;
};
#alias {gps.stop} {
    #var gps_stop 1;
    #class gps.action.inner kill;
    #undelay {there_delay};
    #undelay {gps_delay};
    #unticker {gps_ticker};
    #alias tmp_get_pos #cr;
    set brief 2;
};

#alias {gps.retry} {
    #var tmp @stackpop{gt};
    #if {"${tmp}" == "nil"} {
        #cr;
    };
    #else {
        gps.gt $tmp;
    };
};

#alias {gps.gt} {
    #var gps_stop 0;
    #var gps_gt_dest %1;
    #replace gps_gt_dest ( \(;
    #replace gps_gt_dest ) \);
    
    #if {@isdigit{${gps_gt_dest}}} {
        #var dst_roomno ${gps_gt_dest};
    };
    #else {
        INVOKE gps.get_room ${gps_gt_dest};
        #var dst_roomno ${gps.roomno};
    };

    @stackpush{gt;${dst_roomno}};
    #alias {gps_check_room_done} {
        #var src_roomno ${gps.roomno};
        #var dst_roomno @stacktop{gt};
        
        #if {${gps.roomno} == -1} {
            #delay {1} {
                #showme {GPS: 当前房间未记录, 无法行走};
                random_walk {
                    gps.retry;
                };
            };
        };
        #else {
            #if {${dst_roomno} == ${src_roomno}} {
                gt.stop;
                #var tmp @stackpop{gt};
                #delay {1} {
                    #showme {GPS: 抵达目的地};
                    on_there_${dst_roomno};
                    #alias on_there_${dst_roomno} #cr;
                };
            };
            #else {
                #format {epoch_from} {%T};
                #showme {GPS: 正在寻路: ${src_roomno} -> ${dst_roomno}};
                gps.get_path ${src_roomno} ${dst_roomno};
                #format {epoch_to} {%T};
                #showme {GPS: 完成寻路, 耗时: @eval{$epoch_to-$epoch_from} 秒};
                #var gps_path_index 1;
                #list gps_path size gps_path_size;
                #if {${gps_path_size} == 0} {
                    #var tmp @stackpop{gt};
                    #delay {1} {
                        #showme GPS: 目标房间不可达, 无法行走;
                        notify GPS: 目标房间不可达, 无法行走: ${gps_gt_dest};
                    };
                    on_there {
                        #cr;
                    };
                };
                #else {
                    #var gps.run.mode NORMAL;
                    set brief 1;
                    gps.run;
                };
            };
        };
    };
    gps.check_room {
        gps_check_room_done;
    };
};

#alias {on_reachable} {
    #alias tmp_there #cr;
    #alias tmp_there %0;
    #action {GPS: 目标房间可达} {
        #unaction {GPS: 目标房间可达};
        on_unbusy {
