#alias {get_pos} {
    #alias tmp_get_pos #cr;
    #alias tmp_get_pos %1;
    #var record_state 0;
    #var current_room {};
    #var description {};
    #class record.inner open;
    #action {^%* - $} {
        #var record_state 1;
        #var current_room %%1;
    } {1};

    #action {    「%*」: %*} {
        #delay {look_delay} {
            #var exits_list  {};
            get_exits_done;
        } {1};
    } {6};

    #action {这里没有任何明显的出路。} {
        #var exits_list  {};
        get_exits_done;
    } {7};

    #action {这里唯一的出口是 %w。} {
        #var exits_list  {%%1;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w 和 %w。} {
        #var exits_list {%%1;%%2;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;%%5;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w、%w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;%%5;%%6;};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w、%w、%w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;%%5;%%6;%%7;};
        get_exits_done;
    } {7};


    #action {这里明显的出口是 %w、%w、%w、%w、%w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;%%5;%%6;%%7;%%8};
        get_exits_done;
    } {7};

    #action {这里明显的出口是 %w、%w、%w、%w、%w、%w、%w、%w 和 %w。} {
        #var exits_list {%%1;%%2;%%3;%%4;%%5;%%6;%%7;%%8;%%9};
        get_exits_done;
    } {7};

    #alias {get_exits_done} {
        #var pos.room ${current_room};
        #replace {description} { } {};
        #replace {description} {	} {};
        #var pos.desc ${description};
        #var pos.exits ${exits_list};
        #class record.inner kill;
        #undelay {look_delay};
        tmp_get_pos;
    };

    #action {^    %S。} {
        #cr
    } {8};
    
    #action {^%S%*} {
        #if {$record_state == 1} {
            #var description ${description}%%1%%2;
        };
    } {9};

    #ticker {ticker_get_position_look} {
        #send {l};
    } {3};
    #class record.inner close;
    #send {l};
};

#alias {do_random_walk} {
    #alias {get_pos_done} {
        #list exits_list create ${pos.exits};
        #list exits_list size tmp_exit_list_size;
        #if {${tmp_exit_list_size} == 0} {
            #cr;
        };
        #var tmp_exit_index @random{${tmp_exit_list_size}};
        #list exits_list get  ${tmp_exit_index} exit;
        #delay {1} {
            walk ${exit};            
        };
    };
    get_pos {
        get_pos_done;
    };    
};

