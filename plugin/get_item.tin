#al {get_bishuizhou} {
    #al bishuizhou_action #cr;
    #al bishuizhou_action %0;
    
    #class bishuizhou open;
    #ac {ITEM_NOT_FOUND} {
        gt 南城客栈;
        on_there {
            buy jiudai from er;
        };
    };

    #ac {ITEM_FOUND} {
        #class bishuizhou kill;
        #delay {2} {
            #showme GOT_BISHUIZHOU;
            bishuizhou_action;
        };
    };

    #ac {你撕开无字天书的背页，从里面小心翼翼地取出一张小纸片。} {
        #class bishuizhou kill;
        #delay {2} {
            #showme GOT_BISHUIZHOU;
            bishuizhou_action;            
        };
    };
    #ac {你向店小二买下一个桂花酒袋} {
        gt 袁氏草堂;
        on_there {
            give jiudai to yuan;
            #delay {2} {
                tear book;
            };
        };
    };
    #class bishuizhou close;
    checkitem {避水咒};
};

