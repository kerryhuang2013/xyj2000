#class get_item open;
#al {get_penglai} {
    #al penglai_action #cr;
    #al penglai_action %0;
    #class get_penglai.inner open;
    #ac {ITEM_FOUND} {
        #class get_penglai.inner kill;
        #delay {2} {
            penglai_action;    
        };
    };
    #ac {ITEM_NOT_FOUND} {
        gt 礼品店;
        on_there {
            yao tu;
        };
    };
    #ac {〖东海仙山图〗交给你,并告诉你:带好，别乱丢哦！} {
        #class get_penglai.inner kill;
        southwest;
        penglai_action;
    };
    #class get_penglai.inner close;

    checkitem {〖东海仙山图〗};
};

