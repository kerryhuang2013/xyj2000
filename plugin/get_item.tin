        #class get_qian.inner kill;
        #delay {2} {
            #showme GOT_QIAN;
            qian_action;
        };    
    };
    #al {qu_qian} {
        gt 相记钱庄;
        on_there {
            qu 5 gold;
            account;
        };
    };
    #ac {%*_ITEM_FOUND} {
        #if {%%1 > 5} {
            got_qian;
        };
        #else {
            qu_qian;
        };
    };
    #ac {ITEM_NOT_FOUND} {
        qu_qian;
    };
    #ac {你从银号里取出} {
        got_qian;
    };
    #class get_qian.inner close;

    checkitem 黄金;
};

